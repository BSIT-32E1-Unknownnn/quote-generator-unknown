@{
    ViewData["Title"] = "Random Quote Generator";
}
<h1>
    <span class="navy-text">Random</span> Quote Generator
</h1>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        h1 {
            font-size: 40px;
            padding-top: 30px;
            font-family: Rockwell;
        }

        .navy-text {
            color: navy;
        }

        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #FFF8EC;
        }

        .quote-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0 auto;
            width: 60%;
            background-color: saddlebrown;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        #quote {
            font-size: 30px;
            font-family: Rockwell;
            color: #FFF8EC;
            margin-bottom: 10px; 
        }

        #author {
            font-size: 20px;
            color: gold;
            align-self: flex-end;
        }

        hr {
            width: 100%;
            border: none;
            border-top: 2px solid black; 
            margin: 10px 0; 
        }

        button {
            font-size: 25px;
            font-family: Rockwell;
            padding: 10px 20px;
            background-color: #000080;
            color: #FFF8EC;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }

            button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="quote-container">
        <div id="quote"></div>
        <hr>
        <div id="author"></div>
    </div>
    <button onclick="generateQuote()">Generate Quote</button>
    
</body>
</html>
